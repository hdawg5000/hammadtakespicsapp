<% provide(:title, "Login") %>
        
<div id="login_form">
  <h1 class="page_title">Login</h1>
  <p>Login to interact with others, comment on pictures and manage your account</p>
  
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.email_field :email, placeholder: "Email address", class: 'form-control' %></br>
    
    <%= f.password_field :password, placeholder: "Password", class: 'form-control' %></br>
    
    <%= f.submit "Log In", id:"submit" %>
  <% end %>
  <div class="info">
    <p id="info-para">Need to create an account? <span id="redirect_link">
    <%= link_to 'Sign up', signup_path %>
    </span>  
  </div>
</div>
