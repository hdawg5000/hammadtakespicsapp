<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title)%> | Hammad Takes Pics</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'https://use.fontawesome.com/e64fb0309a.js' %>
    <%= javascript_include_tag 'application', 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
    <% if current_page?(controller: "pages", action: "home") || current_page?(controller: "pages", action: "albums") || current_page?(controller: "pages", action: "italy") || current_page?(controller: "pages", action: "videos")%>
      <%= render 'layouts/footer_home' %>
    <% else %>
      <%= render 'layouts/footer' %>
    <% end %>
  </body>
</html>
