<% provide(:title, "Signup") %>

<div id="register_form">
  <h1 class="page_title">Create Account</h1>
  <p>Create an account to interact with others, comment on pictures and to contact us</p>
  
  <%= form_tag(method: 'post') do %>
    <%= label_tag(:name, "Name") %>
    <%= text_field_tag(:name) %></br>
    
    <%= label_tag(:email, "Email") %>
    <%= email_field(:username, :address) %></br>
    
    <%= label_tag(:password, "Password") %>
    <%= password_field_tag(:password) %></br>
    
    <%= label_tag(:confirm_password, "Confirm Password") %>
    <%= password_field_tag(:confirm_password) %></br>
    
    <%= submit_tag("Register", id:"submit") %></br>
  <% end %>
  <p>Already registered? <span id="redirect_link">
    <%= link_to 'Login here', login_path %>
  </span></form></div>
</div>
